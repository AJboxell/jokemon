<h1>Choose your Pok√©mon</h1>
<% @battle = Battle.new %>

<div class="lists" data-controller="select">
  <div class="list">
    <h2>Your Champion:</h2>
    <% @pokemons.each do |pokemon| %>
      <div class="selector" data-select-target="option" data-action="click->select#toggleClick">
        <%= image_tag ("avatars/#{pokemon.name}.png") %>
        <div class="poke-info"><%= pokemon.name %></div>
      </div>
    <% end %>
  </div>

  <div class="list">
    <h2>Your Opponent:</h2>
    <% @pokemons.shuffle.each do |pokemon| %>
      <div class="selector" data-select-target="option" data-action="click->select#toggleClick">
        <%= image_tag ("avatars/#{pokemon.name}.png") %>
        <div class="poke-info"><%= pokemon.name %></div>
      </div>
    <% end %>
  </div>
</div>

<div class="pokeform">
  <%= simple_form_for @battle, url: battles_path, method: :post do |f| %>
    <%= f.input :user, as: :hidden, collection: @pokemons %>
    <%= f.input :adversary, as: :hidden, collection: @pokemons %>
    <%= f.button :submit, value: 'FIGHT', class: 'btn' %>
  <% end %>
</div>
